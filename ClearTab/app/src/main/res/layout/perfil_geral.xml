<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/perfil_geral">

    <Button
        android:id="@+id/pg_editar"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="238dp"
        android:layout_marginBottom="447dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/projeto_editar"
        android:textColor="@color/white"
        app:icon="@drawable/outline_create_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pg_baixar"
        android:layout_width="133dp"
        android:layout_height="49dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="444dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/dark_gray"
        android:text="@string/projeto_baixar"
        android:textColor="@color/black"
        app:icon="@drawable/baseline_arrow_downward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pg_nome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:hint="@string/criar_conta_nome"
        android:inputType="text"
        android:text="@string/criar_conta_nome"
        app:layout_constraintBottom_toTopOf="@+id/navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="49dp"
        android:text="@string/criar_conta_nome"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/pg_nome"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="33dp"
        android:text="@string/perfil_cargo"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/editTextText5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pg_cargo"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="465dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:hint="@string/perfil_cargo"
        android:inputType="text"
        android:text="@string/perfil_cargo"
        app:layout_constraintBottom_toTopOf="@+id/navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="90dp"
        android:text="@string/criar_conta_email"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_view"
        app:layout_constraintEnd_toStartOf="@+id/pg_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pg_email"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:hint="@string/criar_conta_email"
        android:inputType="text"
        android:text="@string/criar_conta_email"
        app:layout_constraintBottom_toTopOf="@+id/navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>