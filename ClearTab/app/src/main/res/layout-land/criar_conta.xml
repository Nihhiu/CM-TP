<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/criar_conta">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/cc_nome"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/criar_conta_nome"
        android:inputType="text"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_password"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/cc_criar_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:text="@string/criar_conta_conta"
        tools:layout_editor_absoluteY="287dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/criar_conta_email"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="304dp" />

    <EditText
        android:id="@+id/cc_password"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="358dp"
        tools:layout_editor_absoluteY="223dp" />

    <EditText
        android:id="@+id/cc_email"
        android:layout_width="357dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="@string/criar_conta_email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:text="@string/criar_conta_nome"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="@string/criar_conta_para_login"
        android:textColor="@color/main_light_green"
        tools:layout_editor_absoluteX="418dp"
        tools:layout_editor_absoluteY="363dp" />

</androidx.constraintlayout.widget.ConstraintLayout>